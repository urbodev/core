<%
  @page_title = "Create an Account"
%>

<div class="page-header">
  <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :basic) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password, autocomplete: "off", placeholder: @validatable ? "#{@minimum_password_length} characters minimum" : "Password" %>
  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <%= f.submit "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
